# cargo-deny configuration for canopy.rs
# This file defines security, license, and dependency policies
# Run with: cargo deny check

[graph]
# Deny multiple versions of the same crate unless explicitly allowed
all-features = false
no-default-features = false

[advisories]
# Security vulnerability database
db-path = "~/.cargo/advisory-db"
db-urls = ["https://github.com/rustsec/advisory-db"]
vulnerability = "deny"
unmaintained = "warn"
yanked = "warn"
notice = "warn"
informational = "warn"
ignore = [
    # Add any specific advisories to ignore here if needed
    # "RUSTSEC-0000-0000",
]

[licenses]
# License policy - only allow specific licenses
unlicensed = "deny"
allow = [
    "MIT",
    "Apache-2.0",
    "Apache-2.0 WITH LLVM-exception",
    "BSD-2-Clause",
    "BSD-3-Clause",
    "ISC",
    "Unicode-DFS-2016",
]
deny = [
    "GPL-2.0",
    "GPL-3.0",
    "AGPL-1.0",
    "AGPL-3.0",
    "CC-BY-SA-4.0",
]
copyleft = "warn"
allow-osi-fsf-free = "neither"
default = "deny"
confidence-threshold = 0.8

# License exceptions for specific crates
[[licenses.exceptions]]
allow = ["Unicode-DFS-2016"]
name = "unicode-ident"

[bans]
# Deny specific crates or patterns
multiple-versions = "warn"
wildcards = "allow"
highlight = "all"
workspace-default-features = "allow"
external-default-features = "allow"
allow-wildcard-paths = true

# Skip certain duplicate dependencies that are common in the ecosystem
skip = [
    { name = "windows-sys" },      # Common in Windows ecosystem
    { name = "windows-targets" },  # Common in Windows ecosystem
]

# Deny specific problematic crates
deny = [
    # Add any crates to deny here
    # { name = "openssl", version = "*" },  # Prefer rustls
]

[sources]
# Only allow crates from these sources
unknown-registry = "warn"
unknown-git = "deny"
allow-registry = ["https://github.com/rust-lang/crates.io-index"]
allow-git = [
    # Add any git dependencies here if needed
]

# Configuration for organizational policies
[sources.allow-org]
# github = ["your-org"]
# gitlab = ["your-org"]
